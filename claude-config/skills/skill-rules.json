    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched (debugging, verification)",
            "high": "Important - Trigger for most matches (TDD, code review, testing)",
            "medium": "Moderate - Trigger for clear matches (planning, worktrees)",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "python_paths": "Adjust pathPatterns to match your Python project structure",
            "golang_paths": "Adjust pathPatterns to match your Go project structure (services-pilot, chifo-controller-test, etc.)",
            "java_paths": "Adjust pathPatterns to match your Java project structure (Maven/Gradle projects)",
            "superpowers_integration": "Superpowers skills are prefixed with 'superpowers:' and auto-activated based on triggers",
            "keywords": "Add domain-specific terms relevant to your work (e.g., specific frameworks, tools)",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
