{
    "version": "1.0",
    "description": "Skill activation triggers for Python, Golang, and Java development workflows with Superpowers plugin integration",
    "skills": {
        "python-dev-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Python development best practices including FastAPI, async patterns, and modern tooling (uv, pytest, ruff)",
            "promptTriggers": {
                "keywords": [
                    "python",
                    "fastapi",
                    "flask",
                    "django",
                    "pytest",
                    "pydantic",
                    "async python",
                    "asyncio",
                    "pandas",
                    "numpy",
                    "data processing",
                    "python script",
                    "python api",
                    "python service",
                    "uv",
                    "pyproject.toml"
                ],
                "intentPatterns": [
                    "(create|add|implement|build|write).*?(python|fastapi|flask|django|api|service|script)",
                    "(fix|debug|handle).*?(python|error|exception)",
                    "(test|testing).*?python",
                    "(how to|best practice).*?python",
                    "(async|asynchronous).*?python"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/*.py",
                    "**/pyproject.toml",
                    "**/requirements.txt",
                    "**/setup.py"
                ],
                "pathExclusions": [
                    "**/__pycache__/**",
                    "**/.venv/**",
                    "**/venv/**",
                    "**/*.pyc"
                ],
                "contentPatterns": [
                    "from fastapi",
                    "from flask",
                    "import pandas",
                    "import asyncio",
                    "@pytest",
                    "async def"
                ]
            }
        },
