{
  "fileSuggestion": {
    "type": "command",
    "command": "~/.claude/file-suggestion.sh"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebSearch",
      "Skill(superpowers:brainstorming)",
      "Skill(superpowers:writing-plans)",
      "Skill(superpowers:subagent-driven-development)",
      "Skill(playwright-skill:playwright-skill)",
      "Bash(helm template:*)",
      "Bash(pre-commit:*)",
      "Bash(go test:*)",
      "Bash(go doc:*)",
      "Bash(go get:*)",
      "Bash(go build:*)",
      "Bash(go mod edit:*)",
      "Bash(go mod:*)",
      "Bash(go vet:*)",
      "Bash(go list:*)",
      "Bash(gofmt:*)",
      "Bash(golangci-lint run:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(rg:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Bash(npx tsc:*)",
      "Bash(npm view:*)",
      "Bash(git rev-parse HEAD)"
    ],
    "deny": [],
    "ask": [],
    "defaultMode": "default"
  },
  "model": "claude-sonnet-4-20250514",
  "enableAllProjectMcpServers": true,
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message '$(basename $(pwd)): Claude needs your input' -sender com.apple.Terminal"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message '$(basename $(pwd)): Task completed!' -sender com.apple.Terminal"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bunx -y ccstatusline@latest",
    "padding": 0
  },
  "enabledPlugins": {
    "superpowers@superpowers-marketplace": true,
    "playwright-skill@playwright-skill": true,
    "shell-scripting@claude-code-workflows": true,
    "code-simplifier@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "gopls-lsp@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true
}
